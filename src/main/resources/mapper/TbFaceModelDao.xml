<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.userqiao.linework.dao.TbFaceModelDao">

    <resultMap type="com.userqiao.linework.entity.TbFaceModel" id="TbFaceModelMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="faceModel" column="face_model" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbFaceModelMap">
        select id,
               user_id,
               face_model
        from linework.tb_face_model
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbFaceModelMap">
        select id,
               user_id,
               face_model
        from linework.tb_face_model
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbFaceModelMap">
        select
        id, user_id, face_model
        from linework.tb_face_model
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="faceModel != null and faceModel != ''">
                and face_model = #{faceModel}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_face_model(user_id, face_model)
        values (#{userId}, #{faceModel})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_face_model(user_id, face_model)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.faceModel})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_face_model(user_id, face_model)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.faceModel})
        </foreach>
        on duplicate key update
        user_id = values(user_id) , face_model = values(face_model)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update linework.tb_face_model
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="faceModel != null and faceModel != ''">
                face_model = #{faceModel},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from linework.tb_face_model
        where id = #{id}
    </delete>

</mapper>