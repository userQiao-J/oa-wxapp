<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.userqiao.linework.dao.TbCityDao">

    <resultMap type="com.userqiao.linework.entity.TbCity" id="TbCityMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="city" column="city" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbCityMap">
        select id,
               city,
               code
        from linework.tb_city
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbCityMap">
        select id,
               city,
               code
        from linework.tb_city
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbCityMap">
        select
        id, city, code
        from linework.tb_city
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="city != null and city != ''">
                and city = #{city}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_city(city, code)
        values (#{city}, #{code})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_city(city, code)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.city}, #{entity.code})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_city(city, code)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.city}, #{entity.code})
        </foreach>
        on duplicate key update
        city = values(city) , code = values(code)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update linework.tb_city
        <set>
            <if test="city != null and city != ''">
                city = #{city},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from linework.tb_city
        where id = #{id}
    </delete>

</mapper>