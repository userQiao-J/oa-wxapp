<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.userqiao.linework.dao.TbModuleDao">

    <resultMap type="com.userqiao.linework.entity.TbModule" id="TbModuleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="moduleCode" column="module_code" jdbcType="VARCHAR"/>
        <result property="moduleName" column="module_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbModuleMap">
        select id,
               module_code,
               module_name
        from linework.tb_module
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbModuleMap">
        select id,
               module_code,
               module_name
        from linework.tb_module
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbModuleMap">
        select
        id, module_code, module_name
        from linework.tb_module
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="moduleCode != null and moduleCode != ''">
                and module_code = #{moduleCode}
            </if>
            <if test="moduleName != null and moduleName != ''">
                and module_name = #{moduleName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_module(module_code, module_name)
        values (#{moduleCode}, #{moduleName})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_module(module_code, module_name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.moduleCode}, #{entity.moduleName})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_module(module_code, module_name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.moduleCode}, #{entity.moduleName})
        </foreach>
        on duplicate key update
        module_code = values(module_code) , module_name = values(module_name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update linework.tb_module
        <set>
            <if test="moduleCode != null and moduleCode != ''">
                module_code = #{moduleCode},
            </if>
            <if test="moduleName != null and moduleName != ''">
                module_name = #{moduleName},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from linework.tb_module
        where id = #{id}
    </delete>

</mapper>