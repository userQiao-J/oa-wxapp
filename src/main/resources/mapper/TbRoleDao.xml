<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.userqiao.linework.dao.TbRoleDao">

    <resultMap type="com.userqiao.linework.entity.TbRole" id="TbRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="permissions" column="permissions" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbRoleMap">
        select id,
               role_name,
               permissions
        from linework.tb_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbRoleMap">
        select id,
               role_name,
               permissions
        from linework.tb_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbRoleMap">
        select
        id, role_name, permissions
        from linework.tb_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleName != null and roleName != ''">
                and role_name = #{roleName}
            </if>
            <if test="permissions != null">
                and permissions = #{permissions}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_role(role_name, permissions)
        values (#{roleName}, #{permissions})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_role(role_name, permissions)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleName}, #{entity.permissions})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into linework.tb_role(role_name, permissions)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleName}, #{entity.permissions})
        </foreach>
        on duplicate key update
        role_name = values(role_name) , permissions = values(permissions)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update linework.tb_role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="permissions != null">
                permissions = #{permissions},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from linework.tb_role
        where id = #{id}
    </delete>

</mapper>